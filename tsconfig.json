{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"module": "NodeNext",
		"lib": ["DOM", "ES2015"],
		"moduleResolution": "NodeNext",
		"types": ["jest"]
	},
	"include": ["src/**/*.ts", "__test__/*.ts"],
	"exclude": ["node_modules"]
}
